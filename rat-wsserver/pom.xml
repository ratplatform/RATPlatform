	<build>
		<finalName>${artifact.name}-${artifact.version}</finalName>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.4</version>
				<configuration>
				<skip>false</skip>
				<updateReleaseInfo>true</updateReleaseInfo>
				</configuration>
			</plugin>

			<plugin>
			<groupId>org.apache.tomcat.maven</groupId>
			<artifactId>tomcat7-maven-plugin</artifactId>
			<version>2.2</version>
			<configuration>
			<url>http://localhost:8080/manager/text</url>
			<server>TomcatServer</server>
			<path>/RATWSServer</path>
			</configuration>
			</plugin>

			<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-war-plugin</artifactId>
			<configuration>
			<archive>
			<manifest>
			<!--addClasspath>true</addClasspath-->
			</manifest>
			<manifestEntries>
			<version>${project.version}</version>
			</manifestEntries>
			<manifestEntries>
			<url>${project.url}</url>
			<Author>Daniele Grignani</Author>
			<Product>RATPlatform 2.0 - ${artifact.name}-${artifact.version}</Product>
			</manifestEntries>
			</archive>
			
			<webResources>
			<resource>
			<directory>WebContent</directory>
			<includes>
			<include>**/*.*</include>
			</includes>
			</resource>

			<resource>
			<directory>src/main/java/META-INF</directory>
			<targetPath>WEB-INF/classes/META-INF</targetPath>
			</resource>
			</webResources>
			
			</configuration>
			</plugin>
			
